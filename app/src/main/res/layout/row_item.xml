<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:background="@android:color/white"
        android:id="@+id/row_city_tv"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:text="Yerevan"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:textStyle="italic"
        android:gravity="center"/>
    <ImageView
        android:background="@android:color/white"
        android:layout_toRightOf="@id/row_city_tv"
        android:src="@drawable/wether_icon1"
        android:id="@+id/row_city_image"
        android:layout_width="80dp"
        android:layout_height="60dp" />
    <TextView
        android:gravity="center"
        android:background="@android:color/white"
        android:id="@+id/row_temp_tv"
        android:text="8ยบ C"
        android:textColor="@android:color/black"
        android:layout_toRightOf="@id/row_city_image"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:textSize="18sp"
        android:textStyle="bold"/>

</RelativeLayout>